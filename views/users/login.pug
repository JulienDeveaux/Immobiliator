extends ../layout

block content
    .container
        h1 Page de connexion
        br
        form(role='form', action="/users/login", method="post", style='max-width: 300px;')
            if (error)
                p.text-danger #{error}
            .form-group
                input.form-control(type='text', name="username", placeholder='Nom d\'utilisateur')
            .form-group
                input.form-control(type='password', name="password", placeholder='Mot de passe')
            button.btn.btn-primary(type='submit') Se connecter


        a(href='/users/oauth')
            button.btn.btn-success.mt-2(type="button") With google
        br
        a(href='/')
            button.btn.btn-primary.mt-1(type="button") Annuler