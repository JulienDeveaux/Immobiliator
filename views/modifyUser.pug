extends layout

block content
    if (error)
        p.text-danger #{error}
    form(method='POST')
        legend Modify User
        div.form-group.mb-1
            label(for='username') UserName
            input#username.form-control(type='text', name='username', autofocus, value=user.username)
        .form-group
            input.form-control(type='password', name="oldPassword", placeholder='Old Password')
            input.form-control(type='password', name="password", placeholder='Password')
        button.btn.btn-primary(type='submit') Submit