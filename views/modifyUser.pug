extends layout

block content
    form(method='POST')
        legend Modify User
        div.form-group.mb-1
            label(for='username') UserName
            input#username.form-control(type='text', name='username', autofocus)
        .form-group
            input.form-control(type='password', name="password", placeholder='Password')
        button.btn.btn-primary(type='submit') Submit