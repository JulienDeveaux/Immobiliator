extends layout

block content
    .container
        h1 Page de cr√©ation de compte
        br
        form(role='form', action="/register", method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Nom d\'utilisateur')
            .form-group
                input.form-control(type='password', name="password", placeholder='Mot de passe')
            .form-group
                select.form-select(name='type')
                    option(value="true") Utilisateur
                    option(value="false") Agent Immobilier
            button.btn.btn-primary(type='submit') S'enregistrer


        a(href='/')
            button.btn.btn-primary(type="button") Annuler
